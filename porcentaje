public class porcentaje {
    public static void imprimirPorcentaje(int numero) {

        if (numero <= 0) {
            System.out.println("El nÃºmero debe ser positivo.");
            return;
        }
        StringBuilder cadena = new StringBuilder(numero + "%: ");
        for (int i = 0; i < numero; i++) {
            cadena.append("#");
        }

        System.out.println(cadena);
    }

    public static void main(String[] args) {
        imprimirPorcentaje(27);
        imprimirPorcentaje(77);
    }
}
